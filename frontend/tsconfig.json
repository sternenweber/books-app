{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "types": ["@openui5/types"],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./webapp",
    "paths": {
      "books-frontend/*": ["*"]
    }
  },
  "include": ["webapp/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
